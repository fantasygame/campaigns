= simple_form_for([campaign, hero], url: url, method: method, multipart: true) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, placeholder: 'Name'
    = f.input :titles, placeholder: 'Titles', input_html: { rows: 5 }
    = f.input :archetype, placeholder: 'Archetype'
    = f.input :race, placeholder: 'Race'
    = f.input :alignment, placeholder: 'Alignment'
    = f.input :deity, placeholder: 'Deity'
    = f.input :appearance, placeholder: 'Appearance', input_html: { rows: 5 }
    = f.input :mechanics, placeholder: 'Mechanics', input_html: { rows: 5 }
    = f.input :background, placeholder: 'Background', input_html: { rows: 10 }
    = f.input :image, as: :file

  .form-actions
    = f.button :submit
