= simple_form_for([campaign, game, post]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :content, as: :bootsy, label: false, placeholder: "Content", input_html: { style: 'min-height: 20em;' }
    = f.input :funny_quote, label: 'Funny quote?'

  .form-actions
    = f.button :submit, class: 'btn btn-success'
