= simple_form_for([campaign, idea]) do |f|
  = f.error_notification

  .container.table-margin
    .row
      .col-md-1
      .col-md-10
        %h4= "Campaign #{idea.campaign}"
      .col-md-1
    .form-inputs
      .row
        .col-md-1
        .col-md-10
          = f.input :title, label: false, placeholder: "Title"
        .col-md-1
      .row
        .col-md-1
        .col-md-10
          = f.input :description, as: :bootsy, label: false, placeholder: "Description", input_html: { style: 'min-height: 20em;' }
        .col-md-1
      .row
        .col-md-1
        .col-md-11
          =f.submit class: 'btn btn-default'
