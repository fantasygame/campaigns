%h2= "Items in '#{campaign.name}' campaign"

.container.money-container
  .row
    .col-md-2
      %h4
        Total money:
        - if feature? :money_history
          = link_to campaign.money, campaign_money_history_index_path(campaign)
        - else
          = campaign.money
    .col-md-10
      = render 'campaigns/form_change_money'

= link_to campaign, class: 'btn btn-default' do
  %span.glyphicon.glyphicon-chevron-left
  &nbsp;
  Back
= link_to 'New Item', new_campaign_item_path(campaign), class: 'btn btn-success'

.apple_pagination
  = will_paginate items

= render 'table'

.apple_pagination
  = will_paginate items
