%h1 Listing items

%table
  %thead
    %tr
      %th Name
      %th Price
      %th Sold
      %th Campaign
      %th Hero
      %th
      %th
      %th
      
  %tbody
    - @items.each do |item|
      %tr
        %td= item.name
        %td= item.price
        %td= item.sold
        %td= item.campaign
        %td= item.hero
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
